<Page
    x:Class="MyBoard.Pages.SelectPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyBoard"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:MyBoard.Controls"
    mc:Ignorable="d">


    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 左列瀑布流 -->
            <ListView Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" 
                     ItemsSource="{x:Bind LeftServerList}" SelectionMode="None">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="12"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="controls:ServerCard">
                        <Border Width="200" Height="100" Background="#FF1E1E1E" CornerRadius="12" 
                                Padding="12" BorderBrush="#FF3C3C3C" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding ServerInfo.Name}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding ServerInfo.ConnectionType}" FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding ServerInfo.Latency}" FontSize="20" FontWeight="Bold" 
                                           Foreground="{Binding ServerInfo.LatencyBrush}" HorizontalAlignment="Right" 
                                           VerticalAlignment="Bottom" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- 右列瀑布流 -->
            <ListView Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" 
                     ItemsSource="{x:Bind RightServerList}" SelectionMode="None">
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="12"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="controls:ServerCard">
                        <Border Width="200" Height="100" Background="#FF1E1E1E" CornerRadius="12" 
                                Padding="12" BorderBrush="#FF3C3C3C" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="{Binding ServerInfo.Name}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                <TextBlock Text="{Binding ServerInfo.ConnectionType}" FontSize="12" Foreground="Gray" Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding ServerInfo.Latency}" FontSize="20" FontWeight="Bold" 
                                           Foreground="{Binding ServerInfo.LatencyBrush}" HorizontalAlignment="Right" 
                                           VerticalAlignment="Bottom" Margin="0,10,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </Grid>
    </ScrollViewer>
</Page>
